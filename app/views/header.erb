<header>
  <div id="logo"><a href="/">Bookmark Manager</a></div>
  <a href="/links/new" id="add-link" class="btn">add link</a>
  <div id="user-links">
    <% if current_user %>
      Welcome, <%= current_user.email %>
      <form action="/sessions" method="post">
        <input type="hidden" name="_method" value="delete"/>
        <input type="submit" value="Sign out"/>
      </form>
    <% else %>
      <a href="/sessions/new" id="sign-in" class="btn">Sign in</a>
      <a href="/users/new" id="sign-up" class="btn">Sign up</a>
    <% end %>

  </div>
</header>
